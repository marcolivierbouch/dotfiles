background no
update_interval 2
double_buffer yes
#no_buffers yes
#imlib_cache_size 10
#${pre_exec lsb_release -d | cut -f 2| tr "[:upper:]" "[:lower:]"
gap_x 60
gap_y 60
#minimum_size 268 1220
#maximum_width 600
alignment top_right
own_window yes
own_window_type override
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 255
own_window_hints undecorated, sticky, skip_taskbar, skip_pager, below
border_inner_margin 0
border_outer_margin 0

# Graphics settings
draw_shades no
default_shade_color AAAAAA
draw_outline no
default_outline_color AAAAAA
draw_borders no
draw_graph_borders no
#default_graph_size 26 80
show_graph_scale no
show_graph_range no
default_bar_size 45 5

# Text settings
use_xft yes
xftalpha 0
font Noto Sans:size=9
text_buffer_size 20000
max_user_text 100000
override_utf8_locale yes

# Useful shortenings
short_units yes
pad_percents 2
top_name_width 30

## Color scheme
# Greyscale
default_color FFFFFF
color0 F4F4F4
color1 DEDEDE
color2 B6B6B6
color3 A1A1A1
color4 828282
color5 616161
# Red
color6 F44336
# Green
color7 4CAF50
# Cyan
color8 00BCD4
# Blue
color9 06B4F9

## Template definitions
